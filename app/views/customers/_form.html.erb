
<div style="margin-top:40px;", class="renu">
    <h2>Register</h2>

  <%= form_with model: @customer do |form| %>

  <label class="required ">Name:
    <%= form.text_field :name, required: true ,style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>

  <label class="required">Contact:
    <%= form.telephone_field :contact, required: true , style:"border-radius: 0.375rem;border: 1px solid #ced4da;"%>
  </label><br><br>

  <label>Branch:
    <%= form.text_field :branch_name, style:"border-radius: 0.375rem;border: 1px solid #ced4da;"%>
  </label><br><br>

  <label>Address:
    <%= form.text_field :address, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>

  <label>City:
    <%= form.text_field :city, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>

  <label>State:
    <%= form.text_field :state, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>

  <label>Zip:
    <%= form.number_field :pincode, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>
  
  <label class="required">Email:
    <%= form.email_field :email, required: true, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>
  
  <label class="required">Password:
    <%= form.password_field :password,required: true, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>
  
  <label class="required">Confirm Password:
    <%= form.password_field :new_password_confirmation,required: true, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br><br>
  
  <label class="required">Security Question:
    <%= form.select :security_question , ["What's your first pet name? ", "What's your bestfriend's name? ","What's your favourite sport?  ", "When is your mom's birthday?", "What's your favourite holiday spot?"],required: true, style:"border-radius: 0.375rem;border: 1px solid #ced4da;"%> 
  </label><br><br>
  
  <label class="required">Security Answer:
    <%= form.text_field :security_answer, required:true, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
  </label><br>

  <div class="submit">
    <%= form.submit "Submit", class:"submit-btn" %>
  </div><br>

  <div>
      <p>Already have an account? <%= link_to "Login", signin_customer_path %></p>
  </div><br>

  <% end %><br><br><br><br> 
</div>

