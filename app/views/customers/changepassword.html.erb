<div class="reg">
<br><br>
    <%= form_with url: update_changepassword_path do |form| %>

      <div>
        <h3>Change password</h3>
      </div><br><br>

        <label class="required">Current Password:
        <%= form.password_field :current_password, style:"border-radius: 0.375rem;border: 1px solid #ced4da;"%>
        </label><br>

        <label class="required">New Password:
        <%= form.password_field :new_password, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
        </label><br>

        <label class="required">Confirm new password:
        <%= form.password_field :new_password_confirmation, style:"border-radius: 0.375rem;border: 1px solid #ced4da;" %>
        </label><br><br>

        <div class="submit">
        <%= form.submit "Update Password", class:"submit-btn" %>
        </div>

    <% end %> 
</div>

